params {
    outdir		= "$PWD"
    
    loci 		= false
    taxa_list		= false
    gtdb_tree		= false
    
    n_training_loci	= 100
    k_max 		= 4
    
    n_threads 		= 4
    executor		= 'local'
}

process {
    cpus = 1
    memory = '4 GB'

    withLabel: iqtree_local {
        executor = 'local'
    	cpus = "${params.n_threads}"
    }

    withLabel: iqtree_slurm { 
	executor = 'slurm'
    	cpus = "${params.n_threads}"
        memory = { 8.GB * task.attempt }
        errorStrategy = { task.exitStatus == 1 ? 'retry' : 'terminate' }
    }
}
	
trace { enabled = true }
report { enabled = false }
timeline { enabled = false }
