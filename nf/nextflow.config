params {
    outdir		= "$PWD"
    loci 		= "$baseDir/../data/alignments/full_loci/*"
    taxa_list		= null
    n_training_loci	= 100
    constraint_trees	= null
    n_threads 		= 8
}

profiles {
    local {
	process {
	    executor = 'local'
	    cpus = 1
	    memory = '4 GB'
        }
    }
    slurm {
	process {
	    executor = 'slurm'
	    //queueSize = 50
	    cpus = ${params.n_threads} 
	    memory = '4 GB'
	}
    }
}

trace { enabled = true }
report { enabled = true }
timeline { enabled = true }
